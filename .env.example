# Pexip Configuration
PEXIP_NODE=us-cn1.pexipdemo.com
CONFERENCE_ALIAS=your-conference-name
DISPLAY_NAME=Transcription Bot
PIN=

# Transcription Provider Selection
TRANSCRIPTION_PROVIDER=openai  # Options: openai, gemini

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-4o-transcribe

# Gemini Configuration (if using Gemini provider)
GEMINI_API_KEY=

# Voice Activity Detection (VAD) Settings
VAD_ENABLED=true                # Enable/disable VAD
VAD_TYPE=semantic_vad           # Options: server_vad, semantic_vad

# Server VAD Settings (only used when VAD_TYPE=server_vad)
VAD_THRESHOLD=0.5               # Detection sensitivity (0.0-1.0)
VAD_SILENCE_DURATION=500        # Milliseconds of silence before commit

# Semantic VAD Settings (only used when VAD_TYPE=semantic_vad)
VAD_EAGERNESS=auto              # Options: low, medium, high, auto
# - low: Longer waits, larger chunks (presentations)
# - medium/auto: Balanced (default)
# - high: Faster commits, smaller chunks (Q&A)

# Language Settings
TRANSCRIPTION_LANGUAGE=en       # ISO language code

# Debug Settings
DEBUG_OPENAI=false              # Show all OpenAI WebSocket messages
DEBUG_GEMINI=false              # Show all Gemini messages
INCLUDE_LOGPROBS=false          # Include word-level confidence scores

# Advanced Settings
INPUT_AUDIO_NOISE_REDUCTION=near_field  # Options: near_field, far_field

# API Server Settings
SERVER_PORT=3000                # Port for HTTP API server (optional, defaults to 3000)