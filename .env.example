# Pexip Configuration
PEXIP_NODE=your-pexip-server.com
CONFERENCE_ALIAS=your-conference-alias
DISPLAY_NAME=Transcription Bot
PIN=

# Transcription Configuration
# Set to true to enable live transcription
ENABLE_TRANSCRIPTION=false

# OpenAI API Key - Required if transcription is enabled
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Realtime Settings
# Models: gpt-4o-transcribe, gpt-4o-mini-transcribe, whisper-1
OPENAI_MODEL=gpt-4o-transcribe

# Language in ISO-639-1 format (en, es, fr, de, it, pt, ru, ja, ko, zh)
TRANSCRIPTION_LANGUAGE=en

# Optional prompt to guide transcription (e.g., "Expect technical terms related to WebRTC")
TRANSCRIPTION_PROMPT=

# Voice Activity Detection (VAD) Settings
# Threshold for voice detection (0.0 to 1.0)
VAD_THRESHOLD=0.5

# Silence duration in milliseconds before ending speech segment
VAD_SILENCE_DURATION=500

# Audio Processing Settings
# Noise reduction: near_field, far_field, or leave empty to disable
NOISE_REDUCTION=near_field

# Include logprobs for confidence scoring
INCLUDE_LOGPROBS=false

# Audio chunk duration in milliseconds
CHUNK_DURATION_MS=1000

# File Output Settings
# Save raw PCM audio files
SAVE_RAW_PCM=true

# Save WAV audio files
SAVE_WAV=true